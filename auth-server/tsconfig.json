{
  "compilerOptions": {
    "outDir": "dist",
    "sourceMap": true,
    "target": "esnext",
    "module": "CommonJS",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "@sharedTypes/*": ["../hybrid-types/*"]
    }
  },
  "include": ["./*.js", "src/**/*.ts", "test/**/*.ts"]
}
